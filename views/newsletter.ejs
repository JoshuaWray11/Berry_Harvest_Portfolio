<% layout('layouts/boilerplate') %>

<div class="row">
   <h1 class="text-center" id="newsletterHeading">Newsletter</h1>
   <div class="mt-3 d-flex justify-content-center">
      <p id="signUpText">Sign up to our newsletter to hear the freshes updates from us!</p>
  </div>  
   <div class="col-6 offset-3">
   <form action="/berryharvest/newsletter/submission" method="POST">
   <div class="mb-3">
       <label class="form-label" for="name">Name: </label>
       <input class="form-control" type="text" id="name" name="newsletter[name]" required>
       <div class="mb-3">
        <label class="form-label" for="name">Email: </label>
        <input class="form-control" type="email" id="email" name="newsletter[email]" required>
        <div class="d-flex mt-4 justify-content-center">
            <button class='btn btn-outline-secondary'>Submit</button>
        </div>
        </div>
   </div>
    </form>
   </div>
</div>
