<% layout('layouts/boilerplate') %>

<div class="row">
   <h1 class="text-center">Newsletter</h1>
   <div class="col-6 offset-3">
   <form action="/newsletter/submission" method="POST">
   <div class="mb-3">
       <label class="form-label" for="name">Name: </label>
       <input class="form-control" type="text" id="name" name="newsletter[name]" required>
       <div class="mb-3">
        <label class="form-label" for="name">Email: </label>
        <input class="form-control" type="email" id="email" name="newsletter[email]" required>
        <div class="mb-3">
            <button class='btn btn-success'>Submit</button>
        </div>
        </div>
   </div>
    </form>
   </div>
</div>
